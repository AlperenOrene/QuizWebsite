@{
    ViewData["Title"] = "Öğrenci Paneli";
}

<style>
    body {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        min-height: 100vh;
        font-family: "Segoe UI", Arial, sans-serif;
    }

    .dashboard-container {
        max-width: 1100px;
        margin: auto;
        padding: 60px 15px;
    }

    .glass-card {
        background: rgba(255,255,255,0.96);
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        animation: fadeUp 0.6s ease;
    }

    .welcome-title {
        font-weight: 800;
        letter-spacing: 0.4px;
    }

    .action-card {
        border-radius: 18px;
        padding: 32px;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 35px rgba(0,0,0,0.3);
        }

    .action-icon {
        font-size: 42px;
    }

    .action-title {
        font-weight: 700;
        margin-top: 14px;
    }

    .action-desc {
        color: #666;
        font-size: 1.05rem;
        margin-bottom: 24px;
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="dashboard-container">

    <div class="glass-card p-4 mb-4">
        <h2 class="welcome-title mb-2">
            Hoş Geldiniz, Sevgili Öğrenci 🎓
        </h2>

        <p class="text-muted fs-5 mb-0">
            Buradan sınavlara girip soruları çözebilirsiniz.
        </p>
    </div>

    <div class="glass-card p-4">
        <div class="row g-4">

            <div class="col-md-6">
                <div class="action-card border text-center">
                    <div class="action-icon">📝</div>
                    <div class="action-title fs-4">
                        Sınavlar
                    </div>
                    <div class="action-desc">
                        Aktif sınavlara katıl ve soruları çöz.
                    </div>

                    <a asp-controller="Quizs"
                       asp-action="Index"
                       class="btn btn-success btn-lg w-100">
                        Sınavlara Git →
                    </a>
                </div>
            </div>


            <div class="col-md-6">
                <div class="action-card border text-center">
                    <div class="action-icon">🚪</div>
                    <div class="action-title fs-4">
                        Çıkış Yap
                    </div>
                    <div class="action-desc">
                        Güvenli bir şekilde oturumu kapat.
                    </div>

                    <a asp-controller="Login"
                       asp-action="Logout"
                       class="btn btn-outline-danger btn-lg w-100">
                        Çıkış Yap
                    </a>
                </div>
            </div>

        </div>
    </div>

</div>
