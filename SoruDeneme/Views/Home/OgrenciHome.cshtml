@{
    ViewData["Title"] = "Öğrenci Paneli";
}

<div class="container py-5" style="max-width: 1100px;">
    <div class="card shadow-sm mb-4 p-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-2">Hoş Geldiniz, Sevgili Öğrenci</h2>
                <div class="text-muted fs-5">Sınav süreçlerini buradan takip edebilirsiniz.</div>
            </div>

            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-danger btn-lg">
                Çıkış Yap
            </a>
        </div>
    </div>

    <div class="card shadow-sm p-4">
        <div class="card-body">
            <h4 class="fw-bold mb-2">Sınav İşlemleri</h4>
            <p class="text-muted fs-5 mb-4">Aktif sınavlara katılabilir ve çözdüğünüz soruları inceleyebilirsiniz.</p>

            <a asp-controller="Quizs" asp-action="Index" class="btn btn-success btn-lg">
                Sınavlara Git →
            </a>
        </div>
    </div>
</div>