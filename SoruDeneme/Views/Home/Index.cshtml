@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>QuizApp | Giriş</title>

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #667eea, #764ba2);
            font-family: "Segoe UI", Arial, sans-serif;
        }

        .login-container {
            background: rgba(255,255,255,0.95);
            width: 340px;
            padding: 32px;
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
            text-align: center;
            animation: fadeIn 0.6s ease;
        }

        h2 {
            margin-bottom: 6px;
            font-weight: 800;
        }

        .subtitle {
            color: #666;
            margin-bottom: 22px;
        }

        .roles {
            display: flex;
            gap: 10px;
            margin-bottom: 18px;
        }

        .role-pill {
            flex: 1;
            padding: 10px;
            border-radius: 999px;
            border: 2px solid #ddd;
            cursor: pointer;
            transition: 0.25s;
            user-select: none;
        }

            .role-pill input {
                display: none;
            }

            .role-pill.active {
                background: #667eea;
                color: #fff;
                border-color: #667eea;
                box-shadow: 0 6px 15px rgba(102,126,234,0.4);
            }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 11px 12px;
            margin: 8px 0;
            border-radius: 10px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 14px;
        }

        input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 2px rgba(102,126,234,0.25);
        }

        .password-wrapper {
            position: relative;
        }

        .eye {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 12px;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            font-size: 16px;
            cursor: pointer;
        }

            button:disabled {
                opacity: 0.8;
                cursor: not-allowed;
            }

        .spinner {
            width: 18px;
            height: 18px;
            border: 3px solid rgba(255,255,255,0.5);
            border-top: 3px solid #fff;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            display: inline-block;
            vertical-align: middle;
        }

        .error {
            color: red;
            font-size: 13px;
            margin-top: 12px;
        }



        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>

    <div class="login-container">

        <h2>QuizApp</h2>
        <div class="subtitle">Hesabına giriş yap</div>

        <form method="post" action="/Home/Index" onsubmit="startLoading()">

            <div class="roles">
                <label class="role-pill active" id="egitmen">
                    <input type="radio" name="userType" value="Egitmen" checked>
                    👨‍🏫 Eğitmen
                </label>

                <label class="role-pill" id="ogrenci">
                    <input type="radio" name="userType" value="Ogrenci">
                    🎓 Öğrenci
                </label>
            </div>

            <input type="text" name="Isim" placeholder="İsim" required>

            <div class="password-wrapper">
                <input id="password" type="password" name="Sifre" placeholder="Şifre" required>
                <span id="eye" class="eye" onclick="togglePassword()">👁️</span>
            </div>

            <button id="loginBtn">
                <span id="btnText">Giriş Yap</span>
                <span id="spinner" class="spinner" style="display:none;"></span>
            </button>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="error">@TempData["Error"]</div>
        }

    </div>

    <script>
        const egitmen = document.getElementById("egitmen");
        const ogrenci = document.getElementById("ogrenci");

        egitmen.onclick = () => {
            egitmen.classList.add("active");
            ogrenci.classList.remove("active");
        };

        ogrenci.onclick = () => {
            ogrenci.classList.add("active");
            egitmen.classList.remove("active");
        };

        function togglePassword() {
            const p = document.getElementById("password");
            const eye = document.getElementById("eye");

            if (p.type === "password") {
                p.type = "text";
                eye.textContent = "🙈";
            } else {
                p.type = "password";
                eye.textContent = "👁️";
            }
        }

        function startLoading() {
            document.getElementById("btnText").textContent = "Giriş Yapılıyor...";
            document.getElementById("spinner").style.display = "inline-block";
            document.getElementById("loginBtn").disabled = true;
        }
    </script>

</body>
</html>
