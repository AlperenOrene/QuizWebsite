@{
    ViewData["Title"] = "Eğitmen Paneli";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        min-height: 100vh;
        font-family: "Segoe UI", Arial, sans-serif;
    }

    .dashboard-container {
        max-width: 1100px;
        margin: auto;
        padding: 60px 15px;
    }

    .glass-card {
        background: rgba(255,255,255,0.95);
        border-radius: 18px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        animation: fadeUp 0.6s ease;
    }

    .welcome-title {
        font-weight: 800;
        letter-spacing: 0.4px;
    }

    .btn-danger-outline {
        border-radius: 12px;
        padding: 10px 20px;
    }

    .action-card {
        border-radius: 18px;
        padding: 32px;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        cursor: pointer;
    }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 35px rgba(0,0,0,0.25);
        }

    .action-icon {
        font-size: 42px;
    }

    .action-title {
        font-weight: 700;
        margin-top: 15px;
    }

    .action-desc {
        color: #666;
        font-size: 1.05rem;
        margin-bottom: 25px;
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="dashboard-container">

    <!-- ÜST KARŞILAMA KARTI -->
    <div class="glass-card p-4 mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <div>
                <h2 class="welcome-title mb-2">Hoş Geldiniz, Sayın Eğitmen 👋</h2>
                <div class="text-muted fs-5">
                    Sınav süreçlerini ve öğrenci performanslarını buradan yönetebilirsiniz.
                </div>
            </div>

            <a asp-controller="Login"
               asp-action="Logout"
               class="btn btn-outline-danger btn-lg mt-3 mt-md-0 btn-danger-outline">
                Çıkış Yap
            </a>
        </div>
    </div>

    <!-- ANA AKSİYON ALANI -->
    <div class="glass-card p-4">
        <h4 class="fw-bold mb-3">📊 Sınav Yönetimi</h4>
        <p class="text-muted fs-5 mb-4">
            Sınav oluşturabilir, soruları düzenleyebilir ve sonuçları görüntüleyebilirsiniz.
        </p>

        <div class="row g-4">

            <!-- SINAVLAR -->
            <div class="col-md-6">
                <div class="action-card border">
                    <div class="action-icon">📝</div>
                    <div class="action-title fs-4">Sınavlar</div>
                    <div class="action-desc">
                        Yeni sınav oluştur, mevcut sınavları düzenle.
                    </div>
                    <a asp-controller="Quizs"
                       asp-action="Index"
                       class="btn btn-primary btn-lg w-100">
                        Sınavlara Git →
                    </a>
                </div>
            </div>

            <!-- SONUÇLAR (ileriye dönük alan) -->
            <div class="col-md-6">
                <div class="action-card border">
                    <div class="action-icon">📈</div>
                    <div class="action-title fs-4">Sonuçlar</div>
                    <div class="action-desc">
                        Öğrenci skorlarını ve başarı analizlerini incele.
                    </div>
                    <button class="btn btn-outline-secondary btn-lg w-100" disabled>
                        Yakında →
                    </button>
                </div>
            </div>

        </div>
    </div>

</div>
