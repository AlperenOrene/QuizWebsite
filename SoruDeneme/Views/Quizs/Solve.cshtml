@model SolveQuizViewModel

<style>
    body {
        background: linear-gradient(135deg, #d4efe0, #e3f6ec);
    }



    .page-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0,0,0,.06);
        padding: 24px;
    }

    .option-box {
        border: 1px solid #e4e6eb;
        border-radius: 12px;
        padding: 12px 14px;
        margin-bottom: 12px;
        background: #fff;
        transition: all .2s ease;
    }

        .option-box:hover {
            border-color: #0d6efd;
            background: #f8f9ff;
        }

    .question-image {
        max-width: 100%;
        max-height: 380px;
        object-fit: contain;
        border-radius: 14px;
        border: 1px solid #e4e6eb;
        padding: 6px;
        background: #fff;
    }

    .wrap-anywhere {
        overflow-wrap: anywhere;
        word-break: break-word;
    }

    .review-card {
        background: #fff;
        border-radius: 16px;
        border: 1px solid #e4e6eb;
        padding: 18px;
        margin-bottom: 18px;
        box-shadow: 0 6px 18px rgba(0,0,0,.05);
    }

    .chip {
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 12px;
        background: #f1f3f5;
        border: 1px solid #dee2e6;
    }

    .stat-card {
        border-radius: 14px;
        padding: 16px;
        text-align: center;
        color: #fff;
    }

    .stat-success {
        background: linear-gradient(135deg,#28a745,#5dd39e);
    }

    .stat-danger {
        background: linear-gradient(135deg,#dc3545,#ff7a7a);
    }

    .stat-secondary {
        background: linear-gradient(135deg,#6c757d,#adb5bd);
    }

    .stat-primary {
        background: linear-gradient(135deg,#0d6efd,#6ea8fe);
    }
</style>

<div class="container mt-4 mb-5">
    <div class="page-card">

        @if (Model.IsFinished)
        {
            var wrong = Model.TotalQuestions - Model.CorrectCount - Model.BlankCount;

            <h3 class="mb-4 fw-bold">Quiz Sonuçları</h3>

            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <div class="stat-card stat-success">
                        <div class="fs-4 fw-bold">@Model.CorrectCount</div>
                        <div>Doğru</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card stat-danger">
                        <div class="fs-4 fw-bold">@wrong</div>
                        <div>Yanlış</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card stat-secondary">
                        <div class="fs-4 fw-bold">@Model.BlankCount</div>
                        <div>Boş</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card stat-primary">
                        <div class="fs-4 fw-bold">@Model.TotalQuestions</div>
                        <div>Toplam</div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2 mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Sınavlara Dön</a>
                <a asp-controller="Home" asp-action="OgrenciHome" class="btn btn-outline-primary">Öğrenci Paneli</a>
            </div>

            @if (Model.ReviewMode && Model.ReviewItems.Any())
            {
                <h4 class="fw-bold mb-3">Soru İnceleme</h4>

                @foreach (var item in Model.ReviewItems.OrderBy(x => x.QuestionNum))
                {
                    bool isBlank = string.IsNullOrWhiteSpace(item.SelectedOption);
                    bool isCorrect = !isBlank && item.SelectedOption == item.CorrectOption;

                    <div class="review-card">
                        <div class="d-flex justify-content-between mb-2">
                            <div class="fw-semibold wrap-anywhere">
                                @item.QuestionNum) @item.Text
                            </div>
                            <span class="chip">
                                @(isBlank ? "Boş" : isCorrect ? "Doğru" : "Yanlış")
                            </span>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="question-image mb-3" />
                        }

                        <div class="small text-muted mb-2">
                            Doğru: <strong>@item.CorrectOption</strong> |
                            Seçimin: <strong>@(isBlank ? "-" : item.SelectedOption)</strong>
                        </div>

                        @{
                            var opts = new Dictionary<string, string?>
                        {
                        {"A",item.ChoiceA},{"B",item.ChoiceB},{"C",item.ChoiceC},
                        {"D",item.ChoiceD},{"E",item.ChoiceE}
                        };
                        }

                        @foreach (var o in opts)
                        {
                            if (!string.IsNullOrWhiteSpace(o.Value))
                            {
                                <div class="option-box">
                                    <strong>@o.Key)</strong> @o.Value
                                </div>
                            }
                        }
                    </div>
                }
            }
        }
        else
        {
            <div class="d-flex justify-content-between mb-3">
                <span class="text-muted">Soru @(Model.Order + 1) / @Model.TotalQuestions</span>
                <a asp-action="Index" class="btn btn-outline-danger btn-sm">Vazgeç</a>
            </div>

            <form asp-action="Solve" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="quizId" value="@Model.QuizId" />
                <input type="hidden" name="order" value="@Model.Order" />

                <div class="fs-5 fw-semibold wrap-anywhere mb-3">
                    @(Model.Order + 1). @Model.CurrentQuestion.Text
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.CurrentQuestion.ImagePath))
                {
                    <img src="@Model.CurrentQuestion.ImagePath" class="question-image mb-3" />
                }

                @{
                    var q = Model.CurrentQuestion;
                    var choices = new Dictionary<string, string?>
                        {
                        {"A",q.ChoiceA},{"B",q.ChoiceB},{"C",q.ChoiceC},
                        {"D",q.ChoiceD},{"E",q.ChoiceE}
                        };
                }

                @foreach (var c in choices)
                {
                    if (!string.IsNullOrWhiteSpace(c.Value))
                    {
                        <div class="option-box">
                            <label class="w-100 wrap-anywhere">
                                <input type="radio" name="selected" value="@c.Key"
                                       @(Model.SelectedOption == c.Key ? "checked" : "") required />
                                <strong>@c.Key)</strong> @c.Value
                            </label>
                        </div>
                    }
                }

                <div class="d-flex mt-3">
                    @if (Model.Order > 0)
                    {
                        <a class="btn btn-outline-secondary"
                           asp-action="Solve"
                           asp-route-quizId="@Model.QuizId"
                           asp-route-order="@(Model.Order - 1)">Geri</a>
                    }

                    <button type="submit" class="btn btn-primary ms-auto">Sonraki</button>
                </div>
            </form>
        }
    </div>
</div>
