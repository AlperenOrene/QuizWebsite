@model SoruDeneme.Models.Quiz

@{
    ViewData["Title"] = "Yeni Sınav Oluştur";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Yeni Sınav Oluştur</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="QuizName" class="control-label fw-bold">Sınav Adı</label>
                            <input asp-for="QuizName" class="form-control" placeholder="Örn: Matematik Vize 1" />
                            <span asp-validation-for="QuizName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Genre" class="control-label fw-bold">Tür / Kategori</label>
                            <input asp-for="Genre" class="form-control" placeholder="Örn: Sayısal, Tarih, Genel Kültür" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Oluştur" class="btn btn-success btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}