@model SoruDeneme.Models.Quiz

@{
    ViewData["Title"] = "Sınavı Sil";
}

<style>
    body {
        background: #f5f7fa;
    }

    .delete-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8d7da, #f1aeb5);
        padding: 60px 15px;
    }

    .danger-card {
        border-left: 6px solid #dc3545;
        border-radius: 14px;
    }

    .warning-icon {
        font-size: 64px;
        color: #dc3545;
    }

    .quiz-info {
        background: #fff;
        border-radius: 10px;
    }

        .quiz-info dt {
            font-weight: 600;
            color: #495057;
        }

        .quiz-info dd {
            margin-bottom: 0;
        }
</style>

<div class="delete-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">

                <div class="card shadow-lg danger-card">
                    <div class="card-body text-center p-4">

                        <div class="warning-icon mb-3">⚠️</div>

                        <h3 class="fw-bold text-danger mb-2">
                            Sınav Silinecek
                        </h3>

                        <p class="text-muted mb-4">
                            Bu işlem <strong>geri alınamaz</strong>.
                            Aşağıdaki sınav ve tüm soruları kalıcı olarak silinecektir.
                        </p>

                        <dl class="row quiz-info text-start p-3 mb-4">
                            <dt class="col-5">Sınav Adı</dt>
                            <dd class="col-7 fw-bold">@Model.QuizName</dd>

                            <dt class="col-5">Kategori</dt>
                            <dd class="col-7">@((Model.Genre ?? "-").Trim())</dd>

                        </dl>

                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg">
                                    🗑️ Evet, Sınavı Sil
                                </button>

                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    Vazgeç / Listeye Dön
                                </a>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
