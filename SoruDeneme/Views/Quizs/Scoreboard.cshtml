@model IEnumerable<SoruDeneme.Models.QuizAttempt>

@{
    var quiz = ViewBag.Quiz as SoruDeneme.Models.Quiz;
}

<div class="container mt-4">
    <h2>Skor Tablosu</h2>

    @if (quiz != null)
    {
        <p class="text-muted">
            <strong>Quiz:</strong> @quiz.QuizName
        </p>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Öðrenci</th>
                <th>Doðru</th>
                <th>Toplam</th>
                <th>Bittiði Zaman</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@(a.User?.Username ?? "Bilinmiyor")</td>
                    <td>@a.CorrectCount</td>
                    <td>@a.TotalQuestions</td>
                    <td>@(a.FinishedAt.HasValue ? a.FinishedAt.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm") : "-")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Sýnavlara Dön</a>
</div>
