@model SoruDeneme.Models.Quiz

@{
    ViewData["Title"] = "Sınavı Düzenle";
}

<style>
    .edit-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #fff3cd, #f8f9fa);
        padding: 60px 0;
    }

    .edit-card {
        border-radius: 16px;
        border: none;
    }

    .edit-title {
        font-weight: 700;
        letter-spacing: .4px;
    }

    .form-control {
        border-radius: 10px;
    }

    .info-text {
        font-size: .85rem;
        color: #6c757d;
    }
</style>

<div class="edit-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="card shadow edit-card">
                    <div class="card-header bg-warning text-white rounded-top">
                        <h3 class="edit-title mb-0">
                            ✏️ Sınavı Düzenle
                        </h3>
                    </div>

                    <div class="card-body px-4 py-4">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label asp-for="QuizName" class="fw-bold form-label">
                                    Sınav Adı
                                </label>
                                <input asp-for="QuizName"
                                       class="form-control"
                                       maxlength="40" />
                                <div class="info-text">Maksimum 40 karakter</div>
                                <span asp-validation-for="QuizName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Genre" class="fw-bold form-label">
                                    Tür / Kategori
                                </label>
                                <input asp-for="Genre"
                                       value="@(Model.Genre?.Trim())"
                                       class="form-control"
                                       maxlength="25" />
                                <div class="info-text">Maksimum 25 karakter</div>
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit"
                                        class="btn btn-warning text-white btn-lg">
                                    Değişiklikleri Kaydet
                                </button>

                                <a asp-action="Index"
                                   class="btn btn-outline-secondary">
                                    Listeye Geri Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
