@model SoruDeneme.Models.Question

@{
    ViewData["Title"] = "Soruyu Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">Bu soruyu silmek istiyor musunuz?</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger text-center mb-4">Bu işlem geri alınamaz.</p>

                    <div class="p-3 bg-light border rounded mb-4">
                        <h5 class="fw-bold">@Html.DisplayFor(model => model.Text)</h5>
                        <p class="mb-0">Doğru Cevap: @Html.DisplayFor(model => model.CorrectOption)</p>
                        <p class="mb-0 text-muted"><small>Sınav: @Html.DisplayFor(model => model.Quiz.QuizName)</small></p>
                    </div>

                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <input type="submit" value="Evet, Soruyu Sil" class="btn btn-danger btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>