@model SoruDeneme.Models.Question

@{
    ViewData["Title"] = "Soruyu Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title mb-0">Soruyu Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="QuizId" class="control-label fw-bold">Sınav</label>
                            <select asp-for="QuizId" class="form-control" asp-items="ViewBag.QuizId"></select>
                            <span asp-validation-for="QuizId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="QuestionNum" class="control-label fw-bold">Soru No</label>
                            <input asp-for="QuestionNum" class="form-control" />
                            <span asp-validation-for="QuestionNum" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Text" class="control-label fw-bold">Soru Metni</label>
                            <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="ChoiceA" class="control-label">A Şıkkı</label>
                                <input asp-for="ChoiceA" class="form-control" />
                                <span asp-validation-for="ChoiceA" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ChoiceB" class="control-label">B Şıkkı</label>
                                <input asp-for="ChoiceB" class="form-control" />
                                <span asp-validation-for="ChoiceB" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ChoiceC" class="control-label">C Şıkkı</label>
                                <input asp-for="ChoiceC" class="form-control" />
                                <span asp-validation-for="ChoiceC" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="CorrectOption" class="control-label fw-bold">Doğru Cevap</label>
                            <input asp-for="CorrectOption" class="form-control" />
                            <span asp-validation-for="CorrectOption" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-warning text-white btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}