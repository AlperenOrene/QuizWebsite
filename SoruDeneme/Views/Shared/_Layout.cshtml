<!DOCTYPE html>
<html lang="tr" class="h-100">
 @* Sayfa boyunu %100 yaptık *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Footer'ı en alta iten sihirli dokunuş */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1; /* İçeriği esneterek footer'ı aşağı iter */
        }

        .navbar-divider {
            border-left: 1px solid #dee2e6;
            height: 24px;
            margin: 0 15px;
            align-self: center;
        }
    </style>
</head>
<body class="h-100">
    <header>
        @if (ViewContext.RouteData.Values["Action"]?.ToString() != "Index")
        {
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid d-flex justify-content-start">
                    @{
                        var action = ViewContext.RouteData.Values["Action"]?.ToString();
                        var destination = (action == "EgitmenHome" || action == "OgrenciHome") ? action : "Index";
                    }
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="@destination">QuizApp</a>

                    <span class="navbar-divider"></span>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
    </header>

    @* main etiketi flex:1 sayesinde footer'ı en alta itecek *@
    <main role="main" class="pb-3 container">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-white border-top">
        <div class="container text-center">
            <span class="text-muted">© 2025 - QuizApp</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>