@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuizApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@{
        var role = Context.Session.GetString("UserRole"); // Egitmen / Ogrenci
}

<body class="@ViewData["BodyClass"]">

    <!-- HEADER -->
    <nav class="navbar navbar-expand-lg navbar-light app-header">
        <div class="container">
            <span class="navbar-brand fw-bold">
                🎓 QuizApp
            </span>

            <div class="ms-auto d-flex align-items-center gap-3">
                @if (!string.IsNullOrEmpty(role))
                {
                    <span class="badge bg-secondary">
                        @role
                    </span>

                    <a asp-controller="Login"
                       asp-action="Logout"
                       class="btn btn-outline-dark btn-sm">
                        Çıkış Yap
                    </a>
                }
            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="app-footer text-center py-3">
        <small>© @DateTime.Now.Year QuizApp</small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
